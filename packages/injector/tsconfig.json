{
  "compilerOptions": {
    "target": "ES5",
    "rootDir": "src",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "outDir": "dist",
    "types": ["node"],
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}

{
  "extends": "../node_modules/@magicspace/configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "esnext", "es7", "dom.iterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strict": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"],
      "website/*": ["src/website/*"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "../node_modules/**/*",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "images.d.ts",
    "dist"
  ],
  "include": ["src/**/*"]
}
